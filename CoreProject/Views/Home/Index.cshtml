@model Product

@{   
    ViewBag.Title = "Home";
}



<div class="col-12 m-2">
    <h2 class="text-white bg-info p-2">Product</h2>


    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th>Price</th>
            </tr>
        </thead>
        <tbody>
         <tr>
             <td>@Model.Name</td>
             <td>@Model.Price.ToString("C2")</td>
         </tr>
        </tbody>
    </table>

    <div>
        <a asp-controller="Home" asp-action="List" class="btn btn-sm btn-info text-white">Back to List</a>
    </div>
</div>

